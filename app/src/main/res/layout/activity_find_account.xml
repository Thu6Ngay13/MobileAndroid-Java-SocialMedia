<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.FindAccountActivity"
    android:orientation="vertical"
    android:background="@color/white">
    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        app:columnCount="3"
        app:rowCount="1">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_arrow_left_72_dark"
            app:layout_column="0"
            app:layout_row="0" />
    </androidx.gridlayout.widget.GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:id="@+id/tvNotify"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="71dp"
            android:text="We'll send you a code to your email"
            android:textAlignment="center"
            android:textSize="25dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civAvatar"
            android:layout_width="186dp"
            android:layout_height="186dp"
            android:layout_marginStart="112dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="112dp"
            android:src="@mipmap/ic_user_72_dark"
            app:civ_border_color="@color/green_light"
            app:civ_border_width="10dp" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="71dp"
            android:text="Username"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="70dp"
            android:background="@drawable/custom_button_selector_full"
            android:text="Continue"
            android:textSize="20dp"
            app:backgroundTint="@null" />
    </LinearLayout>
</LinearLayout>