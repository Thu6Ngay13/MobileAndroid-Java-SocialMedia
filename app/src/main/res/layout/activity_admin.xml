<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        app:columnCount="3"
        app:rowCount="1">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_arrow_left_72_dark"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/tvAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Admin"
            android:textColor="@color/green_dark"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="0" />

    </androidx.gridlayout.widget.GridLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="53dp"
        android:background="@color/white">


        <Button
            android:id="@+id/btnBanAccount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="70dp"
            android:background="@drawable/custom_button_selector_line"
            android:padding="0dp"
            android:paddingBottom="0dp"
            android:text="Ban account"
            android:textColor="@color/green_dark"
            android:textSize="18dp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnProcessReport"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="70dp"
            android:background="@drawable/custom_button_selector_line"
            android:padding="0dp"
            android:paddingBottom="0dp"
            android:text="Process reports"
            android:textColor="@color/green_dark"
            android:textSize="18dp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnStatistics"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="70dp"
            android:background="@drawable/custom_button_selector_line"
            android:padding="0dp"
            android:paddingBottom="0dp"
            android:text="Statistics"
            android:textColor="@color/green_dark"
            android:textSize="18dp"
            app:backgroundTint="@null" />
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="70dp"
            android:background="@drawable/custom_button_selector_line"
            android:padding="0dp"
            android:paddingBottom="0dp"
            android:text="Log out"
            android:textColor="@color/green_dark"
            android:textSize="18dp"
            app:backgroundTint="@null" />


    </LinearLayout>



</RelativeLayout >