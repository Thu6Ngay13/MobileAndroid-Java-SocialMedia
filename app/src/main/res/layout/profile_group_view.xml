<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:id="@+id/clProfileGroupArea"
    android:orientation="vertical">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rowCount="4"
        app:columnCount="1"
        android:background="@color/white">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civAvatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_user_72_dark"
            app:civ_border_color="@color/green_dark"
            app:layout_column="0"
            app:layout_row="0"
            app:layout_columnSpan="1"
            app:layout_gravity="center"
            android:layout_margin="10dp"
            app:civ_border_width="2dp"/>

        <TextView
            android:id="@+id/tvGroupName"
            android:text="NhÃ³m 1"
            android:textSize="20dp"
            app:layout_column="0"
            app:layout_row="1"
            app:layout_columnSpan="1"
            app:layout_gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvHolderFullName"
            android:layout_margin="5dp"
            android:text="Phap Nguyen"
            android:textSize="12dp"
            app:layout_column="0"

            app:layout_columnSpan="1"
            app:layout_gravity="center"
            app:layout_row="2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_columnSpan="1"
            android:orientation="horizontal"
            app:layout_row="3">
            <Button
                android:id="@+id/btnJoinGroup"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="80dp"
                android:text="Join Group"/>

            <Button
                android:id="@+id/btnEditProfile"

                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Edit Profile"/>
        </LinearLayout>

    </androidx.gridlayout.widget.GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="7dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"

            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:text="Members"
                android:textStyle="bold"
                android:paddingLeft="17dp"
                android:paddingTop="5dp"
                app:layout_column="0"
                app:layout_row="0"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/btnAcceptMembers"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="Accept Members"
                android:textColor="@color/green_dark"
                android:textStyle="bold"
                android:gravity="bottom|right"
                android:paddingRight="10dp"
                android:visibility="gone"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tvJoined"
            android:text="147 friends"
            android:textSize="13dp"
            android:paddingLeft="17dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvJoinedAccount"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="7dp"
        android:orientation="vertical"
        android:paddingBottom="7dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Posts"
            android:textStyle="bold"
            android:paddingLeft="17dp"
            android:paddingTop="5dp"
            app:layout_column="0"
            app:layout_row="0"
            android:textSize="18dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civAvatarSmall"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:background="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:src="@drawable/post_image" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:id="@+id/ibTextPosting"
                android:layout_width="200dp"
                android:text="What's on your mind?"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:paddingLeft="10dp"/>

            <ImageButton
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/ibImagePosting"
                android:layout_width="50dp"
                android:gravity="center"
                android:background="@color/white"
                android:src="@mipmap/ic_image_72_dark"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPostArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>