<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.VerifyNewAccountActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvNotify"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="24dp"
        android:text="Enter the code we sent to c********************@gmail.com"
        android:textAlignment="center"
        android:textSize="22dp"
        android:layout_gravity="center"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp">
        <EditText
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:id="@+id/etToken1"
            android:maxLength="1"
            android:lines="1"
            android:layout_weight="1"
            android:textStyle="normal"
            android:textSize="30sp"
            android:gravity="center"/>
        <EditText
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:id="@+id/etToken2"
            android:maxLength="1"
            android:lines="1"
            android:layout_weight="1"
            android:textStyle="normal"
            android:textSize="30sp"
            android:gravity="center"/>
        <EditText
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:id="@+id/etToken3"
            android:maxLength="1"
            android:lines="1"
            android:layout_weight="1"
            android:textStyle="normal"
            android:textSize="30sp"
            android:gravity="center"/>
        <EditText
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:id="@+id/etToken4"
            android:maxLength="1"
            android:lines="1"
            android:layout_weight="1"
            android:textStyle="normal"
            android:textSize="30sp"
            android:gravity="center"/>
        <EditText
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:id="@+id/etToken5"
            android:maxLength="1"
            android:lines="1"
            android:layout_weight="1"
            android:textStyle="normal"
            android:textSize="30sp"
            android:gravity="center"/>
        <EditText
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:id="@+id/etToken6"
            android:maxLength="1"
            android:lines="1"
            android:layout_weight="1"
            android:textStyle="normal"
            android:textSize="30sp"
            android:gravity="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="49dp"
        android:background="@drawable/custom_button_selector_full"
        android:text="Continue"
        android:textSize="20dp"
        app:backgroundTint="@null" />
</LinearLayout>