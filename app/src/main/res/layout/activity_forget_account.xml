<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ForgetAccountActivity"
    android:orientation="vertical"
    android:background="@color/white">
    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        app:columnCount="3"
        app:rowCount="1">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_arrow_left_72_dark"
            app:layout_column="0"
            app:layout_row="0" />
    </androidx.gridlayout.widget.GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <TextView
            android:id="@+id/tvFindYourAccount"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="40dp"
            android:text="Find your account"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEmailAdress"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="30dp"
            android:paddingLeft="40dp"
            android:text="Enter your email address?"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_edittext"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="20dp"
            android:hint="Email"
            android:paddingLeft="15dp"
            android:inputType="textEmailAddress"/>

        <Button
            android:id="@+id/btnFindAccount"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/custom_button_selector_full"
            android:padding="0dp"
            android:paddingBottom="0dp"
            android:text="Find account"
            android:textSize="20dp"
            app:backgroundTint="@null" />
    </LinearLayout>
</LinearLayout>