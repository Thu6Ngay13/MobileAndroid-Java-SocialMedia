<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ForgetAccountActivity">

    <TextView
        android:id="@+id/tvFindYourAccount"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="623dp"
        android:paddingLeft="40dp"
        android:text="Find your account"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvEmailAdress"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/tvFindYourAccount"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="-610dp"
        android:layout_marginEnd="-2dp"
        android:paddingLeft="40dp"
        android:text="Enter your email address?"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_edittext"
        android:layout_below="@+id/tvEmailAdress"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:hint="Email"
        android:paddingLeft="15dp"/>

    <Button
        android:id="@+id/btnFindAccount"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/etEmail"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="424dp"
        android:background="@drawable/custom_button_selector_full"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:text="Find account"
        android:textSize="20dp"
        app:backgroundTint="@null" />
</RelativeLayout>