<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RegisterActivity">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="557dp"
        android:src="@drawable/logo_541x541" />

    <EditText
        android:id="@+id/etFullName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/ivLogo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-520dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_edittext"
        android:hint="Full name"
        android:inputType="textPersonName"
        android:lines="1"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"></EditText>
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_edittext"
        android:layout_below="@+id/etFullName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="20dp"
        android:hint="Email"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:lines="1"
        android:inputType="textEmailAddress"/>
    <EditText
        android:id="@+id/etBirthday"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_edittext"
        android:layout_below="@+id/etEmail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="20dp"
        android:hint="Birthday"
        android:paddingLeft="15dp"
        android:inputType="none"
        android:focusable="false"
        android:onClick="showDatePickerDialog"
        android:paddingRight="10dp"
        android:lines="1"/>
    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_edittext"
        android:layout_below="@+id/etBirthday"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="20dp"
        android:hint="Username"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:lines="1"
        android:inputType="textPersonName"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/etUsername"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/tilPassword"
        app:passwordToggleEnabled="true">
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_edittext"
            android:hint="Password"
            android:paddingLeft="15dp"
            android:inputType="textPassword"
            android:paddingRight="10dp"
            android:lines="1"
            android:textSize="17sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/etPasswordAgain"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_edittext"
        android:layout_below="@+id/tilPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="20dp"
        android:hint="Enter the password again"
        android:paddingLeft="15dp"
        android:inputType="textPassword"
        android:paddingRight="10dp"
        android:lines="1"/>
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/etPasswordAgain"
        android:layout_marginStart="50dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/custom_button_selector_full"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:text="Create account"
        android:textSize="20dp"
        app:backgroundTint="@null" />

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/btnRegister"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="124dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="-35dp"
        android:text="Already have an account?" />

</RelativeLayout>