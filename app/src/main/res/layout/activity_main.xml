<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/clHomeArea"
    android:orientation="vertical">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:rowCount="1"
        app:columnCount="3">

        <LinearLayout
            android:background="@color/white"
            app:layout_columnWeight="2"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_row="0"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:srcCompat="@drawable/logo_48" />
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/green_dark"
                android:textSize="32sp"
                android:textStyle="bold"
                android:shadowColor="@color/green_dark"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="5"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/ibSearch"
            android:background="@color/white"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@mipmap/ic_search_72_dark" />
        <ImageButton
            android:id="@+id/ibMessage"
            android:background="@color/white"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@mipmap/ic_message_72_dark" />
    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:rowCount="1"
        app:columnCount="4">

        <ImageButton
            android:id="@+id/ibHome"
            android:background="@color/white"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@mipmap/ic_home_72_line" />
        <ImageButton
            android:id="@+id/ibFriend"
            android:background="@color/white"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@mipmap/ic_friend_72_line" />
        <ImageButton
            android:id="@+id/ibNotify"
            android:background="@color/white"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@mipmap/ic_bell_72_line" />
        <ImageButton
            android:id="@+id/ibSetting"
            android:background="@color/white"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="3"
            app:layout_row="0"
            app:srcCompat="@mipmap/ic_setting_72_light" />
    </androidx.gridlayout.widget.GridLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMainArea"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>

